#
# Synaptics DSX TD4322 touchscreen driver configuration
#
menuconfig TOUCHSCREEN_SYNAPTICS_DSX_TD4322
	bool "Synaptics DSX TD4322 touchscreen"
	default n
	help
	  Say Y here if you have a Synaptics DSX TD4322 touchscreen connected
	  to your system.

	  If unsure, say N.

if TOUCHSCREEN_SYNAPTICS_DSX_TD4322

choice
	default TOUCHSCREEN_SYNAPTICS_DSX_TD4322_I2C
	prompt "Synaptics DSX TD4322 bus interface"
config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_I2C
	bool "RMI over I2C"
	depends on I2C
config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_SPI
	bool "RMI over SPI"
	depends on SPI_MASTER
config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_RMI_HID_I2C
	bool "HID over I2C"
	depends on I2C
endchoice

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_CORE
	tristate "Synaptics DSX TD4322 core driver module"
	depends on I2C || SPI_MASTER
	help
	  Say Y here to enable basic touch reporting functionality.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_core.

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_RMI_DEV
	tristate "Synaptics DSX TD4322 RMI device module"
	depends on TOUCHSCREEN_SYNAPTICS_DSX_TD4322_CORE
	help
	  Say Y here to enable support for direct RMI register access.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_rmi_dev.

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_FW_UPDATE
	tristate "Synaptics DSX TD4322 firmware update module"
	depends on TOUCHSCREEN_SYNAPTICS_DSX_TD4322_CORE
	help
	  Say Y here to enable support for doing firmware update.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_fw_update.

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_TEST_REPORTING
	tristate "Synaptics DSX TD4322 test reporting module"
	depends on TOUCHSCREEN_SYNAPTICS_DSX_TD4322_CORE
	help
	  Say Y here to enable support for retrieving production test reports.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_test_reporting.

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_PROXIMITY
	tristate "Synaptics DSX TD4322 proximity module"
	depends on TOUCHSCREEN_SYNAPTICS_DSX_TD4322_CORE
	help
	  Say Y here to enable support for proximity functionality.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_proximity.

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_ACTIVE_PEN
	tristate "Synaptics DSX TD4322 active pen module"
	depends on TOUCHSCREEN_SYNAPTICS_DSX_TD4322_CORE
	help
	  Say Y here to enable support for active pen functionality.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_active_pen.

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_GESTURE
	tristate "Synaptics DSX TD4322 user defined gesture module"
	depends on TOUCHSCREEN_SYNAPTICS_DSX_TD4322_CORE
	help
	  Say Y here to enable support for user defined gesture functionality.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_gesture.

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_VIDEO
	tristate "Synaptics DSX TD4322 video module"
	depends on TOUCHSCREEN_SYNAPTICS_DSX_CORE
	help
	  Say Y here to enable support for video communication functionality.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_video.

config TOUCHSCREEN_SYNAPTICS_DSX_TD4322_DEBUG
	tristate "Synaptics DSX TD4322 debug module"
	depends on TOUCHSCREEN_SYNAPTICS_DSX_TD4322_CORE
	help
	  Say Y here to enable support for firmware debug functionality.

	  If unsure, say N.

	  To compile this driver as a module, choose M here: the
	  module will be called synaptics_dsx_debug.

endif
